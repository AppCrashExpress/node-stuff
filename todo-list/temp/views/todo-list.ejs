<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1>It's a <%= listTitle %></h1>
    </div>

    <div class="box">
        <% taskList.forEach((task) => { %>
        <div class="item">
            <input type="checkbox">
            <p><%= task %></p>
        </div>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="taskInput" placeholder="New item..." autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>
</body>

<%- include("footer") -%>
